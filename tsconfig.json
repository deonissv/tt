{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "incremental": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "references": [
    { "path": "./packages/server" },
    { "path": "./packages/client" }

  ],
  "include": ["packages/server/src/**/*", "packages/client/src/**/*", "packages/shared/**/*"],
  "exclude": ["node_modules", "packages/server/dist", "packages/client/dist"]
}